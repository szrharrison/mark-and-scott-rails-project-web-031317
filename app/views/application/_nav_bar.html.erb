<div class="navbar-fixed">
  <nav>
    <div class="nav-wrapper">
      <div class="row">
        <div class="col s2 m1">
          <%= link_to 'Pixr', root_path, id:"logo" %>
        </div>
        <% if logged_in? %>
            <ul class="right">
              <li class="left-bar">
                <%= link_to "<i class='material-icons pre-word'>face</i><span class='post-pre-word'>View your pics</span>".html_safe, current_user, class: "valign-wrapper" %>
              </li>
              <li class="left-bar">
                <%= link_to "<i class='material-icons pre-word'>add_circle_outline</i><span class='post-pre-word'>Add a Picture</span>".html_safe, new_picture_path, class: "valign-wrapper" %>
              </li>
              <li class="left-bar">
                <%= link_to "Logout", "/sessions/#{current_user.id}", method: 'delete' %>
              </li>
            </ul>
        <% else %>
          <div class="col s10 m8 l6 right">
            <div class="row">
              <div class="col s2 left-bar">
                <%= link_to "Sign Up", new_user_path %>
              </div>
              <%= form_tag '/sessions', class: "col s10 left-bar" do %>
                <div class="row">
                  <div class="input-field inline col s4">
                    <i class="material-icons prefix">account_circle</i>
                    <%= label_tag :username, "Username:" %>
                    <%= text_field_tag :username %>
                  </div>
                  <div class="input-field inline col s4">
                    <i class="material-icons prefix">fingerprint</i>
                    <%= label_tag :password, "Password:" %>
                    <%= password_field_tag :password %>
                  </div>
                  <div class="col s4">
                    <button class="btn waves-effect waves-light" type="submit" name="action">
                      Login
                    </button>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </nav>
</div>
