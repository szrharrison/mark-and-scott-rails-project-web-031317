<!DOCTYPE html>
<html>
  <head>
    <title>Pixr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar-fixed">
      <nav>
        <div class="nav-wrapper">
          <%= link_to 'Pixr', root_path, id:"logo" %>
          <ul class="right">
            <% if logged_in? %>
            <li>
              <%= link_to "View your pics", current_user %>
            </li>
            <li>
              <%= link_to "Logout", "/sessions/#{current_user.id}", method: 'delete' %>
            </li>
            <% else %>
          </ul>
          <div class="nav-content">
            <%= form_tag '/sessions' do %>
              <div class="input-field">
                <%= label_tag :username, "Username:" %>
                <%= text_field_tag :username %>
              </div>
              <div class="input-field">
                <%= label_tag :password, "Password:" %>
                <%= password_field_tag :password %>
              </div>
              <div class="input-field">
                <%= submit_tag "Login", class: "btn-floating btn-large halfway-fab waves-effect waves-light teal" %>
              </div>
            <% end %>
          </div>
          <% end %>
        </div>
      </nav>
    </div>
    <%= yield %>
  </body>
</html>
