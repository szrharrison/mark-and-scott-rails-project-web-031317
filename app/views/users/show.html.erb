<h1>Hello, <%= @user.username %>!</h1>
<% if flash.notice.present? %>
<div class="row">
    <div class="col s12 m5">
      <div class="card-panel red">
        <span class="white-text">
          <%= flash.notice %>
        </span>
      </div>
    </div>
  </div>
<% end %>
<h3>Favorite Pictures:</h3>
<div class="row grid">
<% @user.favorite_pictures.each do |picture| %>
  <div class="col s6 m4 grid-sizer grid-item">
    <div class="card hoverable">
      <div class="card-image">
        <%= link_to "<img src='#{picture.image.url}'><span class='card-title'>#{picture.name}</span>".html_safe, picture %>
        <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">favorite</i></a>
      </div>
      <div class="card-content">
        <% picture.categories.each do |category| %>
        <div class="chip">
          <%= link_to category.name, category %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
</div>
<h3>You are following:</h3>

<% @user.leaders.each do |leader| %>
  <%= leader.username %>
<% end %>

<h3>Your Pictures:</h3>
<div class="row grid">
  <% @user.pictures.each do |picture| %>
    <div class="col s6 m4 grid-sizer grid-item">
      <div class="card hoverable">
        <div class="card-image">
          <%= link_to "<img src='#{picture.image.url}'><span class='card-title'>#{picture.name}</span>".html_safe, picture %>
          <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">favorite</i></a>
        </div>
        <div class="card-content">
          <% picture.categories.each do |category| %>
          <div class="chip">
            <%= link_to category.name, category %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Add a picture", new_picture_path, class: "btn waves-effect waves-light" %>
