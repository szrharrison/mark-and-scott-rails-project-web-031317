<h1>Hello, <%= @user.username %>!</h1>

<h3>You are following:</h3>

<% @user.leaders.each do |leader| %>
  <%= leader.username %>
<% end %>

<h3>Your Pictures:</h3>

<% @user.pictures.each do |picture| %>
  <div class="pictures-display">
    <h5><%= picture.name %></h5>
    <%= link_to "<img src='#{picture.image.url}'>".html_safe, picture %>
  </div>
<% end %>

<%= link_to "Add a picture", new_picture_path, class: "btn" %>
