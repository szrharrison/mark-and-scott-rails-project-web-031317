<% if !@picture.errors.empty? %>
  <% @picture.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= form_for @picture do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <br>
  <%= f.label :image_url, "Image URL" %><br>
  <%= f.text_field :image_url %><br>
  <br>
  <%= label_tag :categories, "Add your tags, separated by commas" %><br>
  <%= text_area_tag :categories %><br>
  <br>
  <%= f.submit class: "btn" %>
<% end %>
