<h2>All Images:</h2>
<div class="row">
  <% @pictures.each do |picture| %>
    <div class="col s6 m4">
      <div class="card hoverable">
        <div class="card-image">
          <%= link_to "<img src='#{picture.image.url}'>".html_safe, picture %>
          <span class="card-title"><%= picture.name %></span>
          <a class="btn-floating halfway-fab waves-effect waves-light red"><i class="material-icons">favorite</i></a>
        </div>
        <div class="card-content">
          <p>this is default content</p>
        </div>
      </div>
    </div>
  <% end %>
</div>
